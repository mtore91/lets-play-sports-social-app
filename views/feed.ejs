<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <h1><%= user.userName %>'s Feed</h1>
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <%= posts[i].sport %> game at <%= posts[i].address %> on <%= posts[i].date.toDateString() %> currently needs <%= posts[i].playersNeeded - posts[i].likes %> players.
            </a>
            <br>
            <% if(posts[i].joinedUsers.includes(user.userName)){ %>
              <span>You have joined this game.</span>
            <%}%>
            <br>
            <% if(posts[i].playersNeeded == posts[i].joinedUserNumber){ %>
              <span>Enough players have joined, game on!</span>
            <%}%>
            </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>